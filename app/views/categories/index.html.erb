<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-hover table-striped table-borderless">
  <thead>
    <tr>
      <th>Name</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to category, class: "btn btn-success" do %>
            <span class="fa fa-eye"></span>
          <% end %>
          <%= link_to edit_category_path(category), class: "btn btn-warning" do %>
            <span class="fa fa-pencil"></span>
          <% end %>
          <%= link_to category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
            <span class="fa fa-eraser"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  new_category_path, class: "btn btn-primary" do %>
  <span class="fa fa-plus"></span> New Category
<% end %>
