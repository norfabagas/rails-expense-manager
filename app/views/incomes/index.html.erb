<h1>Incomes</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Total</th>
      <th>Date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.total %></td>
        <td><%= income.created_at %></td>
        <td><%= income.description %></td>
        <td>
          <%= link_to income, class: "btn btn-success" do %>
            <span class="fa fa-eye"></span>
          <% end %>

          <%= link_to edit_income_path(income), class: "btn btn-warning" do %>
            <span class="fa fa-pencil"></span>
          <% end %>

          <%= link_to income, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } do %>
            <span class="fa fa-eraser"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_income_path, class: "btn btn-info" do %>
  <span class="fa fa-plus"></span> New Income
<% end %>
