<h1>Outcomes</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Total</th>
      <th>Description</th>
      <th>Category</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outcomes.each do |outcome| %>
      <tr>
        <td><%= outcome.total %></td>
        <td><%= outcome.description %></td>
        <td>
          <%
            id = outcome.category_id.to_i
          %>
          <%= Category.find(id).name %>
        </td>
        <td><%= outcome.created_at %></td>
        <td>
          <%= link_to outcome, class: "btn btn-success" do %>
            <span class="fa fa-eye"></span>
          <% end %>
          <%= link_to edit_outcome_path(outcome), class: "btn btn-warning" do %>
            <span class="fa fa-pencil"></span>
          <% end %>
          <%= link_to outcome, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } do %>
            <span class="fa fa-eraser"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_outcome_path, class: "btn btn-info" do %>
  <span class="fa fa-plus"></span> New Outcome
<% end %>
